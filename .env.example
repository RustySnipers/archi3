# Archie Configuration
ARCHIE_CONFIG_PATH=/opt/archie/configs
ARCHIE_DATA_PATH=/opt/archie/data
ARCHIE_LOG_LEVEL=INFO
ARCHIE_ENABLE_VOICE=true
ARCHIE_ENABLE_AUTOMATION=true

# LocalAI Configuration
LOCALAI_API_URL=http://localhost:8080
LOCALAI_API_KEY=your-api-key-here
LOCALAI_MODEL_NAME=gpt-4

# Home Assistant Configuration
HOMEASSISTANT_URL=http://localhost:8123
HOMEASSISTANT_TOKEN=your-ha-token-here

# n8n Configuration
N8N_URL=http://localhost:5678
N8N_API_KEY=your-n8n-api-key-here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_CHAT_ID=your-chat-id-here

# MQTT Configuration
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_USERNAME=archie
MQTT_PASSWORD=your-mqtt-password-here

# Voice Configuration
WHISPER_MODEL=small.en
PIPER_VOICE=en_US-lessac-medium
WAKE_WORD=archie

# Security
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here

# Database
CHROMA_DB_PATH=/opt/archie/data/chroma

# Logging
LOG_FILE=/opt/archie/data/logs/archie.log
LOG_ROTATION=10MB
LOG_RETENTION=30d